<h1 class="text-center">All Cocktails</h1>
<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-sm-4">

      <ul class="list-unstyled">
        <h3><%= link_to cocktail_path(c) do %></h3>
        <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/600x4<%= rand(10..99)%>/?cocktail');">
          <p> <%= c.name %> </p>
        </div>
        <% end %>
      </ul>

    </div>
    <%end%>
  </div>
</div>
</div>
